<?xml version="1.0" ?>
<robot name="sensor_suites" xmlns:xacro="http://ros.org/wiki/xacro">
  <!--
    @file   sensor_suite.urdf
    @brief  Test file for the sensor suite object.

    @author brice.c.aa

    @note Units: dimensions are in "m", mass is in "kg".
  -->

  <!-- ******************** ROBOT CONSTANTS ******************** -->
  <!-- Dimensions: Mount -->
  <xacro:property name="base_length" value="0.060"/>
  <xacro:property name="base_width" value="0.020"/>
  <xacro:property name="base_height" value="0.060"/>

  <!-- [NOTE] x-axis points forward, y-axis points to left, z-axis points upwards. -->

  <!-- Kinematics: Intertial properties -->
  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (h*h + d*d)}" ixy="0" ixz="0" iyy="${(m/12) * (w*w + d*d)}" iyz="0" izz="${(m/12) * (w*w + h*h)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (3*r*r + h*h)}" ixy = "0" ixz = "0" iyy="${(m/12) * (3*r*r + h*h)}" iyz = "0" izz="${(m/2) * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="sphere_inertia" params="m r">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${(2/5) * m * (r*r)}" ixy="0" ixz="0" iyy="${(2/5) * m * (r*r)}" iyz="0" izz="${(2/5) * m * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <!-- ******************** MOUNT FOOTPRINT ******************** -->
  <!-- Define center of sensor suite mount projected on the ground. -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <!-- Base footprint of robot is located underneath base. -->
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ******************** MOUNT ******************** -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707963267949 0 3.141592654"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="Black">
        <color rgba="${0/255} ${0/255} ${0/255} 1.0"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
    </collision>

    <xacro:box_inertia m="0.200" w="${base_width}" d="${base_length}" h="${base_height}"/>
  </link>

  <gazebo reference="base_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- ******************** CAMERA ******************** -->
  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.060 0.052 0.039"/>
      </geometry>
      <material name="Red">
        <color rgba="${255/255} ${0/255} ${0/255} 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.060 0.052 0.039"/>
      </geometry>
    </collision>

    <xacro:box_inertia m="0.066" w="0.052" d="0.060" h="0.039"/>
    <!-- 
    <inertial>
      <mass value="0.066"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    -->
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="${base_length} 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ******************** LIDAR SENSOR ******************** -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.060 0.060 0.090"/>
      </geometry>
      <material name="Green">
        <color rgba="${0/255} ${255/255} ${0/255} 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.060 0.060 0.090"/>
      </geometry>
    </collision>

    <xacro:box_inertia m="0.370" w="0.060" d="0.060" h="0.090"/>
    <!-- 
    <inertial>
      <mass value="0.370"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    -->
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 ${base_height}" rpy="0 0 0"/>
  </joint>

  <!-- ******************** IMU SENSOR ******************** -->
  <link name="imu_link"/>

  <!-- This sensor is simply attached to a link, nothing more. -->
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 ${base_height}" rpy="0 0 0"/>
  </joint>

</robot>
