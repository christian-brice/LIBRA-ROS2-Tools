<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>libra</name>
  <version>0.0.0</version>
  <description>LIghtweight Balanced Robot Arm (LIBRA)</description>
  <maintainer email="brice.c.67b9@m.isct.ac.jp">Christian Brice</maintainer>
  <license>MIT</license>

  <!-- [ BUILD DEPENDENCIES ] -->

  <!-- (autogenerated) -->
  <buildtool_depend>ament_cmake</buildtool_depend>
  <!-- ROS2 Client Library for Python: build ROS2 nodes from Python code -->
  <exec_depend>rclpy</exec_depend>

  <!-- [ NODES ] -->

  <!-- Joint State Publisher: publish joint state values for a given URDF -->
  <exec_depend>joint_state_publisher</exec_depend>
  <!-- Robot State Publisher: publish robot state to tf2 by combining URDF model and joint states -->
  <exec_depend>robot_state_publisher</exec_depend>
  <!-- ROS2 3D Robot Visualizer: visualize robot state and other sensor data via interactive 3D map -->
  <exec_depend>rviz2</exec_depend>
  <!-- XML Macro Language: enable shorter and more readable URDF files; e.g., defining constants and helper functions -->
  <exec_depend>xacro</exec_depend>
  <!-- RealSense-ROS: ROS2 wrapper for Intel RealSense cameras -->
  <exec_depend>realsense2_camera</exec_depend>
  <!-- LightWare-ROS: ROS2 wrapper for LightWare SF40-C and SF45-B LIDARs -->
  <exec_depend>lightwarelidar2</exec_depend>

  <!-- [ MESSAGES ] -->

  <!-- Geometry: common geometric primimtives such as points, vectors, and poses -->
  <exec_depend>geometry_msgs</exec_depend>
  <!-- Navigation: common messages used to interact with the navigation stack -->
  <exec_depend>nav_msgs</exec_depend>

  <!-- [ TEST DEPENDENCIES ] -->

  <!-- (autogenerated) -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
